            "pages": [
              "development/controller",
              "development/broker",
              "development/cli",
              "development/ui"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/kguardian-dev/kguardian",
          "icon": "github"
        },
        {
          "anchor": "Community",
          "href": "https://github.com/kguardian-dev/kguardian/discussions",
          "icon": "comments"
        },
        {
          "anchor": "Releases",
          "href": "https://github.com/kguardian-dev/kguardian/releases",
          "icon": "tag"
        }
      ]
    }
